{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": ["@nestjs/swagger"],
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./global/environments/*.json"
      },
      {
        "include": "./global/secrets/*.json"
      }
    ]
  }
}
